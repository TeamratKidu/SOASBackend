# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5433
DATABASE_USER=soas_user
DATABASE_PASSWORD=soas_password
DATABASE_NAME=soas_db

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT Configuration
JWT_SECRET=change-this-to-a-secure-random-string-in-production
JWT_EXPIRES_IN=7d

# Application
NODE_ENV=development
PORT=3000

# Payment Gateways (Sandbox)
CHAPA_SECRET_KEY=your-chapa-secret-key
CHAPA_PUBLIC_KEY=your-chapa-public-key
CHAPA_WEBHOOK_SECRET=your-chapa-webhook-secret

TELEBIRR_APP_ID=your-telebirr-app-id
TELEBIRR_APP_KEY=your-telebirr-app-key
TELEBIRR_SECRET_KEY=your-telebirr-secret-key
TELEBIRR_WEBHOOK_SECRET=your-telebirr-webhook-secret

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Encryption Key for PII
ENCRYPTION_KEY=your-32-character-encryption-key-here

# SMS Gateway
SMS_GATEWAY_URL=http://your-sms-gateway-url

# Mailjet Email Service
MAILJET_API_KEY=your-mailjet-api-key
MAILJET_SECRET_KEY=your-mailjet-secret-key
MAILJET_FROM_EMAIL=noreply@axumauction.com

# Better Auth
BETTER_AUTH_SECRET=change-this-to-a-minimum-32-character-random-string
BETTER_AUTH_URL=http://localhost:3000

# OAuth - Google (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# OAuth - Facebook (Optional)
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
